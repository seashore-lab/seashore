{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "paths": {
      "@seashore/llm": [
        "./packages/llm/src"
      ],
      "@seashore/tool": [
        "./packages/tool/src"
      ],
      "@seashore/agent": [
        "./packages/agent/src"
      ],
      "@seashore/storage": [
        "./packages/storage/src"
      ],
      "@seashore/vectordb": [
        "./packages/vectordb/src"
      ],
      "@seashore/rag": [
        "./packages/rag/src"
      ],
      "@seashore/workflow": [
        "./packages/workflow/src"
      ],
      "@seashore/memory": [
        "./packages/memory/src"
      ],
      "@seashore/mcp": [
        "./packages/mcp/src"
      ],
      "@seashore/genui": [
        "./packages/genui/src"
      ],
      "@seashore/observability": [
        "./packages/observability/src"
      ],
      "@seashore/evaluation": [
        "./packages/evaluation/src"
      ],
      "@seashore/security": [
        "./packages/security/src"
      ],
      "@seashore/deploy": [
        "./packages/deploy/src"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/dist/**",
    "**/__tests__/**"
  ]
}